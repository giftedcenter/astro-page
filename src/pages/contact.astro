---
// src/pages/contact.astro
import Layout from '../layouts/NoFooterLayout.astro';
// We only need the public site key here. The secret key is used by Netlify's backend.
const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY;
---

<Layout title="Contact Us | Gifted Center" description="Get in touch with Gifted Center for tutoring inquiries.">
  <main class="py-16 md:py-24">
    <div class="container mx-auto px-4">

      <div class="text-center max-w-3xl mx-auto mb-12 md:mb-16">
        <h1 class="text-4xl md:text-6xl font-bold text-slate-800 dark:text-slate-100 mb-4">
          Contact Us
        </h1>
        <p class="text-lg text-slate-600 dark:text-slate-300">
          Have a question or ready to enroll? Reach out directly or use the form below, and we'll get back to you as soon as possible.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

        <div class="bg-slate-50 dark:bg-slate-800 p-8 rounded-lg shadow-lg">
          <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-6">Send a Message ðŸ“¬</h2>
          
          <form
            name="contact"
            method="POST"
            data-netlify="true"
            data-netlify-turnstile
            class="space-y-6"
          >
            <input type="hidden" name="form-name" value="contact" />

            <div>
              <label for="name" class="block text-xl font-medium text-slate-700 dark:text-slate-200 mb-1">Name</label>
              <input type="text" id="name" name="name" required />
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-xl font-medium text-slate-700 dark:text-slate-200 mb-1">Email</label>
                <input type="email" id="email" name="email" required />
              </div>
              <div>
                <label for="telephone" class="block text-xl font-medium text-slate-700 dark:text-slate-200 mb-1">Telephone</label>
                <input type="tel" id="telephone" name="telephone" required />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="grade" class="block text-xl font-medium text-slate-700 dark:text-slate-200 mb-1">Grade</label>
                <input type="text" id="grade" name="grade" />
              </div>
              <div>
                <label for="subject" class="block text-xl font-medium text-slate-700 dark:text-slate-200 mb-1">Subject</label>
                <input type="text" id="subject" name="subject" />
              </div>
            </div>

            <div>
              <label for="info" class="block text-xl font-medium text-slate-700 dark:text-slate-200 mb-1">Additional Info</label>
              <textarea id="info" name="info" rows="4"></textarea>
            </div>
            
            <div data-netlify-turnstile-widget data-sitekey={turnstileSiteKey}></div>
            
            <div>
              <button type="submit" class="submit-button w-full text-lg">
                Submit
              </button>
            </div>
          </form>
          </div>

        <div class="space-y-8 lg:mt-12">
            <h2 class="text-3xl font-bold text-slate-800 dark:text-slate-100 mb-6">Or Contact Us Directly</h2>
            <div class="bg-slate-50 dark:bg-slate-800 p-8 rounded-lg shadow-lg space-y-6">
                <a href="mailto:tutoring@giftedcenter.org" class="!no-underline text-xl text-slate-700 dark:text-slate-200 flex items-center gap-4 group">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 text-blue-600 group-hover:text-blue-400 transition-colors duration-300"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                    <span class="group-hover:text-blue-500 transition-colors duration-300">tutoring@giftedcenter.org</span>
                </a>
                <a href="tel:647-812-6972" class="!no-underline text-xl text-slate-700 dark:text-slate-200 flex items-center gap-4 group">
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 text-blue-600 group-hover:text-blue-400 transition-colors duration-300"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                    <span class="group-hover:text-blue-500 transition-colors duration-300">647-812-6972</span>
                </a>
            </div>
            <img src="/assets/image2.png" alt="A relevant, welcoming image of students or tutors" class="rounded-lg shadow-lg object-cover w-full h-64 mt-8">
        </div>

      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  input[type="text"],
  input[type="email"],
  input[type="tel"],
  textarea {
    @apply w-full rounded-md border-2 border-slate-300 bg-white p-3 text-slate-900 shadow-sm transition;
    @apply focus:border-blue-500 focus:ring-blue-500;
    @apply dark:border-slate-600 dark:bg-slate-700 dark:text-slate-50;
  }

  textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-button {
    @apply w-full cursor-pointer rounded-md bg-blue-600 px-6 py-3 font-bold text-white shadow-lg transition-all duration-300;
    @apply hover:bg-blue-500 hover:shadow-blue-400/50 hover:scale-105;
    @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2;
    @apply dark:focus:ring-offset-slate-800;
    @apply disabled:cursor-not-allowed disabled:bg-slate-400 disabled:shadow-none disabled:scale-100 dark:disabled:bg-slate-600;
  }
</style>