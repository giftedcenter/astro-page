---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
---

<header class="site-header">
  <SkipLinks />

<Navigation>
  <li class="menu-item">
    <a href="/">Home</a>
  </li>

  <li class="menu-item has-dropdown">
    <button aria-haspopup="true" aria-expanded="false">Tutoring</button>
    <ul class="dropdown-menu">
      <li class="submenu-item"><a href="/secondary-school">High School</a></li>
      <li class="submenu-item"><a href="/college">College</a></li>
      <li class="submenu-item"><a href="/university">University</a></li>
      <li class="submenu-item"><a href="/tutors/">Meet Our Tutors</a></li>
    </ul>
  </li>

  <li class="menu-item has-dropdown">
    <button aria-haspopup="true" aria-expanded="false">Programs</button>
    <ul class="dropdown-menu">
      <li class="submenu-item"><a href="/training-camp/">Coding Camp</a></li>
      <li class="submenu-item"><a href="/olympiad-math/">Olympiad Math</a></li>
      <li class="submenu-item"><a href="/ai-literacy/">AI Literacy Course</a></li>
      <li class="submenu-item"><a href="/career-prep/">University and Job Prep</a></li>
      <li class="submenu-item"><a href="/volunteer/">Volunteering</a></li>
    </ul>
  </li>

  <li class="menu-item">
    <a href="/careers/">Careers</a>
  </li>

  <li class="menu-item">
    <a href="/volunteer/">Volunteer</a>
  </li>

  <li class="menu-item">
    <a href="/contact/">Contact Us</a>
  </li>

  <li class="menu-item has-dropdown">
    <button aria-haspopup="true" aria-expanded="false">About Us</button>
    <ul class="dropdown-menu">
      <li class="submenu-item"><a href="/about/">About the Gifted Center</a></li>
      <li class="submenu-item"><a href="/tutors/">Meet the Tutors</a></li>
      <li class="submenu-item"><a href="/blog/">Blog</a></li>
    </ul>
  </li>
</Navigation>

</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  .site-header {
    .contact-info {
      display: flex;
      gap: 20px;
      align-items: flex-end;

      a {
        color: var(--action-color);
        text-decoration: none;
        margin-bottom: 5px;

        &:hover {
          color: var(--action-color-state);
        }
      }
    }

    .type-icon a {
      display: block;

      [data-icon] {
        width: 30px;
        height: auto;
        margin-top: -4px;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>