---
import NoFooterLayout from './NoFooterLayout.astro' // Ensure the path is correct
const { frontmatter, url } = Astro.props
---

<NoFooterLayout title={frontmatter.title} description={frontmatter.description}>
  <!-- Include Google Analytics or any other scripts globally required -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-DV9XBZ03DS"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-DV9XBZ03DS');
  </script>

  <div class="container">
    <header class="mb-8">
      <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
      <p class="text-sm text-gray-600">{frontmatter.publishDate} â€¢ {frontmatter.author}</p>
    </header>

    <article class="prose space-content my-12">
      <slot /> <!-- This will render the actual Markdown content -->
    </article>

  
  </div>
</NoFooterLayout>
<script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
<script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
